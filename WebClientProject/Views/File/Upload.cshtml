@{
	ViewData["Title"] = "Index";
}

<h1>Upload File</h1>
<form method="post" enctype="multipart/form-data" asp-controller="File" asp-action="Upload">
	<div class="input-group mb-3">
		<input type="file" class="form-control" name="formFile" id="inputGroupFile02">
		<input type="hidden" class="form-control" name="courseId" value="@ViewBag.CourseUploadId">
		<label class="input-group-text" for="inputGroupFile02">Upload</label>
	</div>
	<hr />
	<button type="submit" class="btn btn-primary">Submit</button>||
	<a href="@Url.Action("Details", "Course",
            new {Id = @ViewBag.CourseUploadId})">Back to course</a>
	<h4 class="text-danger">@ViewData["Message"]</h4>
</form>
